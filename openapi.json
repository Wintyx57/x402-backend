          {
            "name": "tweet",
            "in": "query",
            "description": "Tweet ID or URL",
            "schema": { "type": "string" }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search keyword for tweets",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "402": { "$ref": "#/components/responses/PaymentRequired" },
          "200": { "description": "Twitter data", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessResponse" } } } }
        }
      }
    },
    "/api/image": {
      "get": {
        "operationId": "generateImage",
        "summary": "AI image generation (DALL-E 3)",
